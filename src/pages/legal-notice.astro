---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Impressum | ${SITE_TITLE}`} description="Legal Notice" />
	</head>
	<body>
		<Header />
		<main class="mx-auto w-full max-w-[720px] px-6 pb-10 pt-12 text-[rgb(var(--gray-dark))]">
			<h1 class="mb-8 text-3xl">Legal Notice</h1>
			<section>
				<div class="mb-8">
					<h2 class="text-lg mb-2">Information in accordance with Section 5 of the German Digital Services Act (DDG)</h2>
					<p class="m-0 leading-6">
						Timo Strotmann<br />
						Horbach 27A<br />
						96193 Wachenroth<br />
						Germany
					</p>
				</div>
				<div class="mb-8">
					<h2 class="text-lg mb-2">Contact</h2>
					<p class="m-0 leading-6">
						Email:
						<a class="ml-1 text-[rgb(var(--accent))] no-underline hover:underline" href="mailto:contact@strotmann.me">
							contact@strotmann.me
						</a>
					</p>
				</div>
				<div class="mb-8">
					<h2 class="text-lg mb-2">VAT ID</h2>
					<p class="m-0 leading-6">No VAT identification number available.</p>
				</div>
				<div class="mb-8">
					<h2 class="text-lg mb-2">
						Responsible for content according to Section 18 (2) of the German Interstate Media Treaty (MStV)
					</h2>
					<p class="m-0 leading-6">
						Timo Strotmann<br />
						Horbach 27A<br />
						96193 Wachenroth<br />
						Germany
					</p>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

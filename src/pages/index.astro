---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { Github, Linkedin } from 'lucide-astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="flex flex-col items-center justify-center gap-3 px-4 pb-8 pt-12 text-center">
				<img
					class="h-[clamp(140px,26vw,220px)] w-[clamp(140px,26vw,220px)] rounded-full bg-[var(--surface)] object-cover shadow-[var(--box-shadow)]"
					src="/8916277.jpg"
					alt="Avatar of Timo Strotmann"
					width="512"
					height="512"
				/>
				<h1 class="m-0 text-[clamp(1.5rem,3.4vw,2.35rem)] tracking-[-0.02em]">Timo Strotmann</h1>
				<p class="m-0 mt-[-0.15rem] text-[clamp(0.95rem,2.2vw,1.1rem)]">
					Tech Enthusiast - Data Management Expert - Health Advocate
				</p>
				<div class="mt-[0.35rem] flex gap-4">
					<a
						class="inline-flex h-[60px] w-[60px] items-center justify-center rounded-full border border-[var(--border)] bg-[var(--surface)] text-[rgb(var(--black))] transition duration-200 ease-in-out hover:border-[rgba(var(--gray),0.4)] hover:bg-[rgba(var(--gray),0.1)] active:scale-[0.98]"
						href="https://www.linkedin.com/in/timo-strotmann"
						target="_blank"
						rel="noreferrer"
					>
						<span class="sr-only">LinkedIn</span>
						<Linkedin class="h-[30px] w-[30px]" aria-hidden="true" />
					</a>
					<a
						class="inline-flex h-[60px] w-[60px] items-center justify-center rounded-full border border-[var(--border)] bg-[var(--surface)] text-[rgb(var(--black))] transition duration-200 ease-in-out hover:border-[rgba(var(--gray),0.4)] hover:bg-[rgba(var(--gray),0.1)] active:scale-[0.98]"
						href="https://github.com/timostrotmann"
						target="_blank"
						rel="noreferrer"
					>
						<span class="sr-only">GitHub</span>
						<Github class="h-[30px] w-[30px]" aria-hidden="true" />
					</a>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
